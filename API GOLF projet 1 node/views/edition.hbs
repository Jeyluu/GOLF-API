<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 style="text-align: center;">API Golf de la Domangère</h1>
        </div>
    </div>
    <div class="row">
        <!-- PUT -->
        <div class="col-md-4">
            <h2 style="text-align: center;">Methode PUT : Permet de modifier le contenu</h2>
            <div class="card">
                <div class="card-body">
                    
                    <form action="/{{_id}}?_method=PUT" method="POST">
                        <div class="form-group">
                            <label>Trou</label>
                            <input class="form-control" type="text" name="trou" value="{{trou}}">
                        </div>
                        <div class="form-group">
                            <label>Par</label>
                            <input class="form-control" type="text" name="par" value="{{par}}">
                        </div>
                        <div class="form-group">
                            <label>Handicap</label>
                            <input class="form-control" type="text" name="handicap" value="{{handicap}}">
                        </div>
                        <div class="form-group">
                            <label>Départ Rouge</label>
                            <input class="form-control" type="text" name="rouge" value="{{departrouge}}">
                        </div>
                        <div class="form-group">
                            <label>Départ Bleu</label>
                            <input class="form-control" type="text" name="bleu" value="{{departbleu}}">
                        </div>
                        <div class="form-group">
                            <label>Départ Jaune</label>
                            <input class="form-control" type="text" name="jaune" value="{{departjaune}}">
                        </div>
                        <div class="form-group">
                            <label>Départ Blanc</label>
                            <input class="form-control" type="text" name="blanc" value="{{departblanc}}">
                        </div>
                        <button type="submit" class="btn btn-primary btn-sm" style="margin:10px 0">Enregistrer</button>

                    </form>

                </div>
            </div>
        </div>
    </div>

</div>